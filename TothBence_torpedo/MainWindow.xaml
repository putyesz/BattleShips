<Window x:Class="TothBence_torpedo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TothBence_torpedo"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Torpedo Game" Height="200" Width="200">
    <StackPanel Orientation="Vertical" Width="200" HorizontalAlignment="Left">
        <Button Tag="P2IA"  Content="1 Player Game" Width="100" Margin="15" Click="Button_Click"/>
        <Button Tag="P2P"  Content="2 Player Game" Width="100" Margin="15" Click="Button_Click"/>
        <Button Tag="HS"  Content="Highscores" Width="100" Margin="15" Click="Button_Click"/>
    </StackPanel>
</Window>
